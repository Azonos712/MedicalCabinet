<Window x:Name="MsgBox" x:Class="MedicalCabinet.UI.View.CustomMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicalCabinet.UI.View"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight" MaxHeight="450" MaxWidth="750" Background="Transparent" AllowsTransparency="True">
    <Border CornerRadius="10" Background="White" Margin="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="15"/>
        </Border.Effect>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="MsgBoxText" Style="{DynamicResource TextBlockStyle}" Margin="20 20 20 10" TextAlignment="Center"
                   HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <Button x:Name="MsgBoxBtn" Content="Ок" Style="{DynamicResource BlueWhiteButtonStyle}" Margin="20 10 20 20" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center"></Button>
        </StackPanel>
    </Border>
</Window>
